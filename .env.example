# iBooky Backend - Environment Variables Template
# Copy this file to .env and fill in your values

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Environment mode: development | production | test
NODE_ENV=development

# Server port (Render will override this with PORT environment variable)
PORT=3000

# API version
API_VERSION=v1

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate a secure random string: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# JWT Token Expiration (examples: 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Allowed origins for CORS (comma-separated, no spaces)
# Examples:
#   - Single origin: https://myapp.com
#   - Multiple origins: https://app1.com,https://app2.com
#   - All origins (development only): *
CORS_ORIGIN=*

# =============================================================================
# DATABASE
# =============================================================================

# SQLite database file path
# Local development: ./data/ibooky.db
# Render production: /opt/render/project/data/ibooky.db
DATABASE_PATH=./data/ibooky.db

# Run database seeds on startup (true | false)
# Set to false in production to avoid overwriting data
RUN_SEEDS=false

# =============================================================================
# EMAIL (Optional - for future features)
# =============================================================================

# SMTP Configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# SMTP_FROM=noreply@ibooky.com

# =============================================================================
# LOGGING (Optional)
# =============================================================================

# Log level: error | warn | info | debug
# LOG_LEVEL=info

# =============================================================================
# RATE LIMITING (Optional - for future implementation)
# =============================================================================

# Maximum requests per window
# RATE_LIMIT_MAX=100

# Time window in minutes
# RATE_LIMIT_WINDOW=15

# =============================================================================
# RENDER-SPECIFIC (Automatic on Render)
# =============================================================================

# These are automatically set by Render:
# RENDER=true
# RENDER_SERVICE_NAME=your-service-name
# RENDER_EXTERNAL_URL=https://your-app.onrender.com
